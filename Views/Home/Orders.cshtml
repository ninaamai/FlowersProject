@{
    ViewData["Title"] = "Мои заказы";
}
@model List<Order>

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
    <li class="breadcrumb-item">
        <a class="active">Мои заказы</a>
    </li>
</ul>

<div class="my-orders-section">
    <h1>Мои заказы</h1>
    <div class="my-orders-content">
        @if (Model.Count != 0)
        {
            @foreach (var item in Model)
            {
                <a class="order-item" asp-controller="Home" asp-action="OrderItem" asp-route-id="@item.Id">
                    <div>
                        <span>№ @item.Id</span>
                        <p>Город отправителя: <span>@item.CitySender</span></p>
                        <p>Адрес отправителя: <span>@item.AddressSender</span></p>
                        <p>Город получателя: <span>@item.CitySender</span></p>
                        <p>Адрес получателя: <span>@item.AddressSender</span></p>
                        <p>Вес товара: <span>@item.ProductWeight кг</span></p>
                        <p>Дата получения: <span>@item.DateReceipt</span></p>
                    </div>
                </a>
            }
        }
    </div>
</div>