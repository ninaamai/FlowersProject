<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flowers</title>
        <link rel="shortcut icon" href="~/img/icon.png" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/scss/style.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Maiboroda_Flowers.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light ">
            <div class="container-fluid p-0">
                <a class="navbar-brand p-0 m-0" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/img/logo.png" />
                </a>
                <div class="navbar-collapse menu-item-wrap collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="menu-item">
                            <a class="menu-link" asp-area="" asp-controller="Home" asp-action="Index">О нас</a>
                        </li>
                        <li class="nav-item">
                            <a class="menu-link" asp-area="" asp-controller="Home" asp-action="Privacy">Доставка и оплата</a>
                        </li>
                        <li class="menu-item">
                            <a class="menu-link" asp-area="" asp-controller="Home" asp-action="Privacy">Отзывы</a>
                        </li>
                        <li class="menu-item">
                            <a class="menu-link" asp-area="" asp-controller="Home" asp-action="Orders">Мои заказы</a>
                        </li>
                        <li class="menu-item">
                            <a class="menu-link" asp-area="" asp-controller="Home" asp-action="Privacy">Контакты</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container-footer">
            <p>Нина Майборода</p>
            <p>г. Санкт-Петербург</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
